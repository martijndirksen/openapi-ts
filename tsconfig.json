{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["src/index.ts", "tests/**/*"],
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "commonjs",
    "target": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "watchOptions": {
    "excludeDirectories": ["**/node_modules", "dist/*"]
  }
}
